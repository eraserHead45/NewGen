@model Login

@{
    ViewData["Title"] = "Login";
}

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })); 
<form method="post" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" role="form">
    @* @using (Html.BeginForm("Login", "Account", new { ReturnUrl = Context.Request.Query["ReturnUrl"]}, FormMethod.Post)); *@
    <div asp-validation-summary="All"></div>

    @* @Html.HiddenFor(model => model.ReturnUrl) *@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary">Login</h3>
            <br />
        </div>
        <div class="mb-3">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px;">Login</button>
    </div>
</form>
